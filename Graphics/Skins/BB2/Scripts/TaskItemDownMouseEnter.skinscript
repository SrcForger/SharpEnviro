unit SkinScript;

interface

function InitAnimation : integer;
function OnAnimate : boolean;

implementation

function InitAnimation : integer;
begin
  result := 30;
end;

function OnAnimate : boolean;
begin
  IncreaseGradientFromAlpha('gradient',24);
  
  // End Condidition
  if GetGradientFromAlpha('gradient') >= 168 then 
  begin
    SetGradientFromAlpha('gradient',168);

    result := false;
  end else result := true;
end;

end.