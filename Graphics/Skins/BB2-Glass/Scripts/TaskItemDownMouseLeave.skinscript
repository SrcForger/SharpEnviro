unit SkinScript;

interface

function InitAnimation : integer;
function OnAnimate : boolean;

implementation

function InitAnimation : integer;
begin
  result := 50;
end;

function OnAnimate : boolean;
begin
  DecreaseGradientFromAlpha('gradient',24);
  
  // End Condidition
  if GetGradientFromAlpha('gradient') <= 64 then 
  begin
    SetGradientFromAlpha('gradient',64);

    result := false;
  end else result := true;
end;

end.