unit SkinScript;

interface

function InitAnimation : integer;
function OnAnimate : boolean;

implementation

function InitAnimation : integer;
begin
  result := 50;
end;

function OnAnimate : boolean;
begin
  BlendColor('Left','$Foreground','$Background',5);
  BlendColor('Middle','$Foreground','$Background',5);
  BlendColor('Right','$Foreground','$Background',5);

  if GetColor('Left') = '$Background' then result := false
     else result := true;
end;

end.