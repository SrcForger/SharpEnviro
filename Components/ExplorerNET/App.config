<?xml version="1.0"?>
<configuration>
	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
	</configSections>
	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<targets>
			<!--<target name="f1" xsi:type="File" fileName="${basedir}\..\Logs\${processname}-${shortdate}.txt"/>-->
			<target name="f1" xsi:type="File" lineEnding="CRLF"
							fileName="${specialfolder:folder=ApplicationData}\SharpEnviro\Settings\User\Logs\${processname}-${shortdate}.txt"
							layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${exception:format=Message,Type,ShortType,ToString,Method,StackTrace}."/>
		</targets>
		<rules>
			<logger name="*" minlevel="Info" writeTo="f1"/>
		</rules>
	</nlog>
</configuration>